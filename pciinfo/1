package meminfo

import (
	"github.com/mickep76/hwinfo/common"
	"strconv"
	"strings"
	"filepath"
)

type PCI struct {
	BusNum     string
	DeviceNum  string
	DeviceFunc string
}

// Info structure for information about a systems memory.
type Info struct {
	PCI []PCI `json:"pci"`
}

// GetInfo return information about PCI devices.
func GetInfo() (Info, error) {
	i := Info{}

	files, err := filepath.Glob("/sys/bus/pci/devices/*/class")
    if err != nil {
        return Info{}, err
    }

	for _, file := range files {
		o, err := common.LoadFiles([]string{file})
		    if err != nil {
        return Info{}, err
    }
}
